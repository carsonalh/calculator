<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DigitButton" parent="android:Widget.Material.Button.Borderless">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:textSize">18pt</item>
        <item name="android:textColor">@color/digit_foreground</item>
        <item name="android:background">@drawable/digit_button</item>
        <item name="android:fontFamily">@font/made_tommy_regular</item>
    </style>
    <style name="BinaryOperatorButton" parent="android:Widget.Material.Button.Borderless">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:textSize">18pt</item>
        <item name="android:textColor">@color/binary_operator_foreground</item>
        <item name="android:background">@drawable/binary_operator_button</item>
    </style>
    <style name="EqualButton" parent="android:Widget.Material.Button.Borderless">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:textSize">18pt</item>
        <item name="android:textColor">@color/equal_foreground</item>
        <item name="android:background">@drawable/equal_button</item>
    </style>
    <style name="UnaryOperatorButton" parent="android:Widget.Material.Button.Borderless">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:textSize">16pt</item>
        <item name="android:textColor">@color/unary_operator_foreground</item>
        <item name="android:background">@drawable/unary_operator_button</item>
        <item name="android:fontFamily">@font/made_tommy_regular</item>
    </style>
    <style name="MemoryButton" parent="android:Widget.Material.Button.Borderless">
        <item name="android:layout_width">68dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12pt</item>
        <item name="android:textColor">@color/memory_foreground</item>
        <item name="android:background">@drawable/memory_button</item>
        <item name="android:fontFamily">@font/made_tommy_semibold</item>
    </style>
    <style name="Theme.Calculator" parent="android:Theme.Material.Light.NoActionBar" />
</resources>