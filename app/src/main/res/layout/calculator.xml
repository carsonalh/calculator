<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="start"
        android:textAlignment="textEnd"
        android:textSize="24pt"
        android:paddingVertical="22pt" />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="6">
        <Button android:id="@+id/memory_add"
            style="@style/CalculatorButton"
            android:text="@string/memory_add" />
        <Button android:id="@+id/memory_subtract"
            style="@style/CalculatorButton"
            android:text="@string/memory_subtract" />
        <Button android:id="@+id/memory_recall"
            style="@style/CalculatorButton"
            android:text="@string/memory_recall" />
        <Button android:id="@+id/memory_clear"
            style="@style/CalculatorButton"
            android:text="@string/memory_clear" />
        <Button android:id="@+id/button_clear_entry"
            style="@style/CalculatorButton"
            android:text="@string/clear_entry" />
        <Button android:id="@+id/button_c"
            style="@style/CalculatorButton"
            android:layout_columnSpan="2"
            android:text="@string/clear" />
        <Button android:id="@+id/button_delete"
            style="@style/CalculatorButton"
            android:text="@string/delete" />
        <Button android:id="@+id/button_7"
            style="@style/CalculatorButton"
            android:text="@string/digit_7" />
        <Button android:id="@+id/button_8"
            style="@style/CalculatorButton"
            android:text="@string/digit_8" />
        <Button android:id="@+id/button_9"
            style="@style/CalculatorButton"
            android:text="@string/digit_9" />
        <Button android:id="@+id/button_multiply"
            style="@style/CalculatorButton"
            android:text="@string/multiply_symbol" />
        <Button android:id="@+id/button_4"
            style="@style/CalculatorButton"
            android:text="@string/digit_4" />
        <Button android:id="@+id/button_5"
            style="@style/CalculatorButton"
            android:text="@string/digit_5" />
        <Button android:id="@+id/button_6"
            style="@style/CalculatorButton"
            android:text="@string/digit_6" />
        <Button android:id="@+id/button_divide"
            style="@style/CalculatorButton"
            android:text="@string/divide_symbol" />
        <Button android:id="@+id/button_1"
            style="@style/CalculatorButton"
            android:text="@string/digit_1" />
        <Button android:id="@+id/button_2"
            style="@style/CalculatorButton"
            android:text="@string/digit_2" />
        <Button android:id="@+id/button_3"
            style="@style/CalculatorButton"
            android:text="@string/digit_3" />
        <Button android:id="@+id/button_subtract"
            style="@style/CalculatorButton"
            android:text="@string/subtract_symbol" />
        <Button android:id="@+id/button_0"
            style="@style/CalculatorButton"
            android:text="@string/digit_0" />
        <Button android:id="@+id/button_decimal"
            style="@style/CalculatorButton"
            android:text="@string/decimal_indicator" />
        <Button android:id="@+id/button_equal"
            style="@style/CalculatorButton"
            android:text="@string/equals" />
        <Button android:id="@+id/button_add"
            style="@style/CalculatorButton"
            android:text="@string/add_symbol" />
    </GridLayout>
</LinearLayout>